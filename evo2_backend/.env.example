# Environment Configuration for Evo2 AI API
# Copy this file to .env and fill in your values

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_ENVIRONMENT=development

# BNB Smart Chain Configuration
BNB_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545/
BNB_MAINNET_RPC=https://bsc-dataseed.binance.org/

# Private Key (Add your wallet private key for deployment)
# WARNING: Never commit this to version control!
PRIVATE_KEY=your_private_key_here

# Smart Contract Addresses (BNB Testnet)
GENOME_NFT_ADDRESS=0x2181B366B730628F97c44C17de19949e5359682C
GENOME_TOKEN_ADDRESS=0x0C5f98e281cB3562a2EEDF3EE63D3b623De98b15
MARKETPLACE_ADDRESS=0xd80bE0DDCA595fFf35bF44A7d2D4E312b05A1576
DAO_ADDRESS=0x8FEbF8eA03E8e54846a7B82f7F6146bAE17bd3f4

# IPFS Configuration
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Modal.com Configuration
MODAL_API_TOKEN=your_modal_token_here
MODAL_WORKSPACE=your_modal_workspace

# Database Configuration (for future use)
DATABASE_URL=postgresql://username:password@localhost/evo2_db
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# AI Model Configuration
ENABLE_FALLBACK_ANALYSIS=true
MAX_SEQUENCE_LENGTH=10000
MIN_QUALITY_SCORE=0.7
